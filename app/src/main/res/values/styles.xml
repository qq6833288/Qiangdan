<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RadioButtonBottomTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/bottom_green</item>
        <item name="android:textColor">@drawable/txtcolor_white2oran_sel</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonBottomTab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@drawable/txtcolor_white2oran_sel</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListViewCommon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:listSelector">@color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="TextViewBody">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
